<?php
$conexao = mysqli_connect("localhost", "aluno", "1234", "curso_24");

// sรณ entra aqui se deu erro ao conectar com o banco
if (!$conexao) {
    echo "Error: falha ao conectar-se com o banco de dados MySQL." . PHP_EOL;
    echo "Debuggeing errno: " . mysqli_connect_errno() . PHP_EOL;
    echo "Debuggeing error: " . mysqli_connect_error() . PHP_EOL;
    exit;
}
